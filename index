<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
document.getElementById('tour').addEventListener('change', function() {
  const value = this.value;
  document.querySelectorAll('.tour-detail').forEach(div => div.style.display = 'none');
  if (value) document.getElementById(value).style.display = 'block';
  const mensaje = value ? `Hola, quiero reservar el tour ${this.options[this.selectedIndex].text}` : '';
  document.getElementById('whatsapp').href = `https://wa.me/524423653316?text=${encodeURIComponent(mensaje)}`;
});
</script>

